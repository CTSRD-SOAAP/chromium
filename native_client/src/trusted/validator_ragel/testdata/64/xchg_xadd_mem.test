  # zero-extending.
  
  # xchg %esi, (%rbp)
  87 75 00
  # sub (%rbp, %rsi, 1), %bl
  2a 5c 35 00
  
  # xadd %edx, (%rsp)
  0f c1 14 24
  # and %bh, (%rbp,%rdx)
  20 7c 15 00
@dis:
