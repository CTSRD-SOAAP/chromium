# MIPS arch variant.
if (current_cpu == "mipsel") {
  declare_args() {
    mips_arch_variant = "r1"
  }
} else if (current_cpu == "mips64el") {
  if (is_android) {
    declare_args() {
      mips_arch_variant = "r6"
    }
  } else {
    declare_args() {
      mips_arch_variant = "r2"
    }
  }
}
