     3:	2a 5c 35 00                                  	sub    0x0(%rbp,%rsi,1),%bl
     7:	0f c1 14 24                                  	xadd   %edx,(%rsp)
     b:	20 7c 15 00                                  	and    %bh,0x0(%rbp,%rdx,1)
