action_foreach("sky") {
  script = "../../../public/sky/convert_amd_modules_to_sky.py"
  sources = [
    "../js/application.js",
    "../js/service_exchange.js",
    "../js/shell.js",
  ]
  outputs = [
    "$target_gen_dir/{{source_name_part}}.sky",
  ]
  args = [
    "--input",
    "{{source}}",
    "--output",
    rebase_path(target_gen_dir, root_build_dir) + "/{{source_name_part}}.sky",
  ]
}
