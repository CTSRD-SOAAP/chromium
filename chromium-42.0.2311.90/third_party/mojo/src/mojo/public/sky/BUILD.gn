action_foreach("sky") {
  script = "convert_amd_modules_to_sky.py"
  sources = [
    "../js/bindings.js",
    "../js/buffer.js",
    "../js/codec.js",
    "../js/connection.js",
    "../js/connector.js",
    "../js/router.js",
    "../js/unicode.js",
    "../js/validator.js",
  ]
  outputs = [
    "$target_gen_dir/{{source_name_part}}.sky",
  ]
  args = [
    "--input",
    "{{source}}",
    "--output",
    rebase_path(target_gen_dir, root_build_dir) + "/{{source_name_part}}.sky",
  ]
}
