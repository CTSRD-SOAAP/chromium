<org.chromium.chrome.browser.autofill.AutofillDialogTitleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/autofill_dialog_title_height"
    android:minHeight="@dimen/autofill_dialog_title_height">
    <ImageView
        android:id="@+id/accounts_logo"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="@dimen/autofill_steady_margin"
        android:scaleType="centerInside"
        android:src="@drawable/wallet_logo"/>
    <Spinner
        android:id="@+id/accounts_spinner"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="@dimen/autofill_steady_margin"/>
    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom|fill_horizontal"
        android:background="#D9D9DC"/>
</org.chromium.chrome.browser.autofill.AutofillDialogTitleView>